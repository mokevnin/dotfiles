{
  "java.jdt.ls.vmargs": "-javaagent:/usr/local/share/nvim/lombok.jar",
  "suggest.enablePreview": true,
  "suggest.enablePreselect": false,
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  "coc.preferences.extensionUpdateCheck": "weekly",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "# ",
  "solargraph.diagnostics": true,
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.filetypes": {
    "php": ["phpcs", "phpstan"],
    "elixir": ["mix_credo"],
    "eelixir": ["mix_credo"]
  },
  "cSpellExt.enableDictionaries": ["russian"],
  "cSpell.enabledLanguageIds": ["markdown", "plaintext", "yml", "php", "node", "python", "html", "css"],
  "cSpell.language": "en,ru",
  "prettier.printWidth": 120,
  "prettier.trailingComma": "all",
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "prettier.singleQuote": true,
  "markdownlint.config": {
    "line_length": false,
    "first-line-h1": false
  },
  "python.linting.flake8Enabled": true,
  "python.linting.banditEnabled": true,
  "python.linting.pytypeEnabled": true
}
